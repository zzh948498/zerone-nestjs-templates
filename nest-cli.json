{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
      "plugins": [
          {
              "name": "@nestjs/swagger",
              "options": {
                  "classValidatorShim": false,
                  "introspectComments": true
              }
          }
      ],
      "assets": ["**/*.json"]
  }
}
